configuration {
  modi: "combi,drun,run,window";
  lines: 6;
  show-icons: true;
  terminal: "ghostty";
  run-shell-command: "{terminal} --window -- bash";
  drun-icon-theme: "Papirus-Dark";
  combi-modi: "drun,run";
  hide-scrollbar: true;
  window-format: "{t}";
  combi-hide-mode-prefix: true;
  display-window: "Windows";
  display-windowcd: "Windows";
  display-run: "Commands";
  display-ssh: "SSH";
  display-drun: "Applications";
  display-combi: "All";
  display-keys: "Keys";
}

@theme "nixos-configuration/home-manager/modules/window-manager/rofi/ayu-mirage.rasi"
